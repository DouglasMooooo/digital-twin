{
  "name": "douglas-digital-twin-copilot",
  "displayName": "Douglas Digital Twin - Copilot Integration",
  "description": "AI-powered chat participant that provides information about Douglas Mo's professional background using Copilot and MCP",
  "version": "1.0.0",
  "publisher": "douglasmo",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "keywords": [
    "copilot",
    "chat",
    "digital-twin",
    "mcp",
    "ai-assistant"
  ],
  "activationEvents": [
    "onChatParticipant:douglas-digital-twin"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "douglas-digital-twin",
        "name": "douglas",
        "description": "Chat with Douglas Mo's digital twin to learn about his professional experience, skills, and projects",
        "isSticky": true,
        "commands": [
          {
            "name": "experience",
            "description": "Get Douglas's work experience"
          },
          {
            "name": "skills",
            "description": "Get Douglas's technical and business skills"
          },
          {
            "name": "projects",
            "description": "Get Douglas's project portfolio"
          },
          {
            "name": "interview",
            "description": "Get interview preparation materials"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "douglas-digital-twin.enableMCP",
        "title": "Douglas Digital Twin: Enable MCP Connection"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.0",
    "@vscode/vsce": "^2.24.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DouglasMooooo/digital-twin"
  },
  "license": "MIT"
}
