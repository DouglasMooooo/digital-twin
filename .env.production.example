# Production environment variables
# Copy this to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=3000
NEXT_PUBLIC_APP_URL=https://douglasmo.ai

# Upstash Vector Database
UPSTASH_VECTOR_REST_URL=https://your-vector-db.upstash.io
UPSTASH_VECTOR_REST_TOKEN=your_vector_token_here

# Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Groq API
GROQ_API_KEY=gsk_your_groq_api_key_here

# Admin Dashboard
ADMIN_PASSWORD=your_secure_admin_password_here

# Redis (Docker local)
REDIS_PASSWORD=your_redis_password_here

# Grafana
GRAFANA_PASSWORD=your_grafana_password_here

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-organization
SENTRY_PROJECT=digital-twin

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Security
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_AB_TESTING=true
ENABLE_INTERVIEW_SIMULATION=true

# Performance
MAX_RESPONSE_TIME_MS=2000
CACHE_TTL_SECONDS=3600
